<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="baseUseClick"
        android:padding="20dp"
        android:text="基本使用"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="commonAdapterClick"
        android:padding="20dp"
        android:text="万能适配器"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="multiTypeSupportClick"
        android:padding="20dp"
        android:text="多布局"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="addHeadFoot"
        android:padding="20dp"
        android:text="添加头部和底部"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="WrapRecyclerView"
        android:padding="20dp"
        android:text="自定义WrapRecyclerView"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="dragRemove"
        android:padding="20dp"
        android:text="侧滑删除"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="refreshClick"
        android:padding="20dp"
        android:text="下拉刷新"
        android:textSize="20sp" />

</LinearLayout>
