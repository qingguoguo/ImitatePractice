<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorTrackTextView">
        <attr name="startColor" format="color"/>
        <attr name="endColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RatingBar">
        <attr name="normalStar" format="reference"/>
        <attr name="focusStar" format="reference"/>
        <attr name="maxNum" format="integer"/>
        <attr name="marginChild" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LettersBar">
        <attr name="letterColor" format="color"/>
        <attr name="letterSelectColor" format="color"/>
        <attr name="letterSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="KgSlidingMenu">
        <attr name="menuRightWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="QqSlidingMenu">
        <attr name="qqMenuRightWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LockView">
    </declare-styleable>

    <!-- X方向上的位移 -->
    <attr name="translationXIn" format="float" />
    <attr name="translationXOut" format="float" />
    <!-- Y方向上的位移 -->
    <attr name="translationYIn" format="float" />
    <attr name="translationYOut" format="float" />

    <!-- 轮播条 -->
    <declare-styleable name="BannerView">
        <!-- 点的选中的颜色值 -->
        <attr name="dotIndicatorFocus"  format="color|reference"/>
        <!-- 点的默认的颜色值 -->
        <attr name="dotIndicatorNormal"  format="color|reference"/>
        <!-- 点的大小 -->
        <attr name="dotSize" format="dimension"/>
        <!-- 点的间距 -->
        <attr name="dotDistance" format="dimension"/>
        <!-- 点的位置 -->
        <attr name="dotGravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="right" value="1"/>
            <enum name="left" value="-1"/>
        </attr>
        <!-- 底部的颜色 -->
        <attr name="bottomColor" format="color"/>
        <!-- 定义宽高比 -->
        <attr name="withProportion" format="float"/>
        <attr name="heightProportion" format="float"/>
    </declare-styleable>
</resources>
